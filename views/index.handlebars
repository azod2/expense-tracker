
<div class="container mr-1 pl-3" style="width: 80%">
    <div class="row mt-5">
        <div class="col-7" >
            <form action="/record/search" method="post">
                <select name="categoryId" id="categoryId" style="width: 300px;">
                    <option value="">類別</option>
                    {{#each category}}
                        <option value="{{this.id}}"> {{this.name}}</option>
                    {{/each}}
                </select>
                <button class='btn btn-outline-info btn-sm' type="submit">查詢</button>
            </form>
        </div>
    </div>
    <div class="row mt-4">
        <div class=" col-7">
            <div class="d-flex">
                總金額:
                <div class="text-center h-25 pt-0"  style="font-size: 300%" >
                    <p class="offset-2 mt-0 mb-0">{{totalAmount}}</p>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-striped table-hover" style="width: 500px">
        {{#each record}}
            <tr>
                <td class="text-center h-25 ml-3 m-2 p-0" width="10%">
                    <i class="{{this.icon}} mt-2" style="font-size: 200%"></i>
                </td>
                <td class="p-0" width="30%">
                    <div class="d-flex flex-column">
                        <p class="mb-0 mt-1">{{this.name}}</p>
                        <p class="mb-0 " style="font-size: 5px">{{this.date}}</p>
                    </div>
                </td>
                <td class="text-right pr-4" width="30%">{{this.amount}}</td>
                <td class="text-center pr-0" width="15%">
                    <form action="/record/{{this._id}}/edit" method="get" style="display: inline;">
                        <button class='btn btn-outline-primary btn-sm' type="submit">修改</button>
                    </form>
                </td>
                <td class="text-center" width="15%">
                    <form action="/record/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
                        <button class='btn btn-outline-danger btn-sm' type="submit">刪除</button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </table>

    <div class="d-flex  justify-content-center" style="width: 300px">
        <form action="/record/new" method="get">
                <button type="submit" class="btn" style="background-color: orange">新增支出</button>
        </form>
    </div>
</div>


