<div class="container">
    <div class="align-content-center">
        <form class="m-auto" style="width: 40%" action="/record/new" method="POST">
            <table class="table table-striped table-hover ">
                <tr class="text-center h-25 ml-3 m-2 p-0">
                    <td class="table table-striped table-hover">
                        *必填欄位
                    </td>
                    <td class="table table-striped table-hover">
                        請輸入你的支出
                    </td>
                </tr>
                <tr>
                    <td>
                        名稱* :
                    </td>
                    <td>
                        <input type="text" name="name">
                    </td>
                </tr>
                <tr>
                    <td>
                        日期* :
                    </td>
                    <td>
                        <input type="date" name="date">
                    </td>
                </tr>
                <tr>
                    <td>
                        類別* :
                    </td>
                    <td>
                        <select name="categoryId" id="category">
                            {{#each category}}
                                <option value="{{this.id}}" {{#ifEq this.id 0}} hidden {{/ifEq}}>{{this.name}}</option>
                            {{/each}}
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        金額* :
                    </td>
                    <td>
                        <input type="number" name="amount">
                    </td>
                </tr>
                <tr>
                    <td>

                    </td>
                    <td>

                            <button type="submit" class="btn btn-outline-secondary">新增支出</button>

                    </td>
                </tr>
            </table>
        </form>
    </div>
    
</div>