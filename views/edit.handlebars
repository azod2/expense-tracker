<div class="container">
    <div class="d-flex">
        <form action="/record/{{record._id}}/edit?_method=PUT" method="POST" style="display: inline;">
            <table>
                <tr>
                    <td>
                        *必填欄位
                    </td>
                    <td>
                        請修改你的支出
                    </td>
                </tr>
                <tr>
                    <td>
                        名稱* :
                    </td>
                    <td>
                        <input type="text" name="name" value="{{record.name}}" required >
                    </td>
                </tr>
                <tr>
                    <td>
                        日期* :
                    </td>
                    <td>
                        <input type="date" name="date"  min="2020-01-01" max="2025-12-31" value="{{record.date}}" required >
                    </td>
                </tr>
                <tr>
                    <td>
                        類別* :
                    </td>
                    <td>
                        <select name="categoryId" id="categoryId" >
                            {{#each category}}
                                <option value="{{this.id}}"  {{#ifEq this.id ../record.categoryId}} selected {{/ifEq}}>{{this.name}}</option>
                            {{/each}}
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        金額* :
                    </td>
                    <td>
                        <input type="number" name="amount" value="{{record.amount}}" required >
                    </td>
                </tr>
                <tr>
                    <td>

                    </td>
                    <td>
                        <button type="submit" class="btn btn-outline-secondary">送出</button>
                    </td>
                </tr>
            </table>
        </form>
    </div>

</div>